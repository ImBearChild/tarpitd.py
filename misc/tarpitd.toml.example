[tarpits]
[tarpits.my_cool_ssh_tarpit]
pattern = "ssh_trans_hold"
rate_limit = -2
bind = [{ host = "127.0.0.1", port = "2222" }]

[tarpits.http_tarpit]
pattern = "http_endless_header"
rate_limit = 2
bind = [
  { host = "127.0.0.1", port = "8080" },
  { host = "::1", port = "8080" },
  { host = "127.0.0.1", port = "8888" },
]